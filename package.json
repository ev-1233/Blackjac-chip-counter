{
  "name": "blackjack-chip-counter",
  "private": true,
  "scripts": {
    "backend:dev": "./.venv/bin/python app.py",
    "dev": "concurrently -k -n BACKEND,FRONTEND -c yellow,cyan \"npm run backend:dev\" \"npm run frontend:dev\"",
    "test": "npm --prefix frontend test",
    "test:watch": "npm --prefix frontend run test:watch",
    "test:with-app": "start-server-and-test \"npm run backend:dev\" http://127.0.0.1:5000 \"npm test\"",
    "frontend:dev": "npm --prefix frontend run dev",
    "frontend:build": "npm --prefix frontend run build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "start-server-and-test": "^2.1.2"
  }
}
